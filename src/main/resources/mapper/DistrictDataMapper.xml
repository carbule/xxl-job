<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korant.youya.workplace.mapper.DistrictDataMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.korant.youya.workplace.pojo.po.DistrictData">
        <id column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_delete" property="isDelete"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , pid, name, code, create_time, update_time, is_delete
    </sql>

    <!--  查出所有地区信息  -->
    <select id="queryAllData" resultType="com.korant.youya.workplace.pojo.vo.district.DistrictDataTreeVo">
        SELECT id, pid, name, code
        FROM district_data
        WHERE is_delete = 0
        ORDER BY code
    </select>

    <!--  查询所有地区数据按缩略词排序  -->
    <select id="queryAllDataSortedByAcronym" resultType="com.korant.youya.workplace.pojo.vo.district.DistrictDataVo">
        SELECT id,
               name,
               code,
               UPPER(LEFT (pinyin, 1)) AS acronym,
               RANK()                     OVER (PARTITION BY pinyin) AS rank
        FROM district_data
        where name != '不限' AND is_delete = 0;
    </select>
</mapper>
